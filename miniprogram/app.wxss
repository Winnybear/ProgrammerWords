.container{
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #fff;
}
.add-classify{
  width: 80rpx;
  height: 80rpx;
  background-color: #a8aaaac5;
  border-radius: 50%;
  position: relative;
}
.add-classify::before{
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 4rpx;
  height: 50%;
  background-color: #5e5f5fc5;
}
.add-classify::after{
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 50%;
  height: 4rpx;
  background-color: #5e5f5fc5;
}