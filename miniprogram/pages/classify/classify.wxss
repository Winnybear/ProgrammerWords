.container{
  height: 100%;
}
.classify-list{
  margin-top: 30rpx;
}
.classify-item{
  width: 690rpx;
  height: 200rpx;
  position: relative;
}
.bg-img{
  width: 690rpx;
  height: 200rpx;
  z-index: -1;
}
.item-value{
  position: absolute;
  top: 28%;
  left: 10%;
}
.item-name{
  font-family: PingFangSC-Medium;
  font-size: 22px;
  color: #FFFFFF;
  letter-spacing: 0;
}
.item-number{
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #DDDDDD;
  letter-spacing: 0;
}
.arrow-container{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
}
.arrow{
  width: 44rpx;
  height: 44rpx;
}
.add-btn{
  text-align: center;
  margin: 50rpx 0;
}
.add-img{
  width: 105rpx;
  height: 100rpx;
}
.add-text{
  font-family: PingFangSC-Regular;
  font-size: 10px;
  color: #848484;
  letter-spacing: 0;
}
