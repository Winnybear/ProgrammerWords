.container{
  height: 100%;
  background-color: rgba(211, 210, 210, 0.301);
}
.word-info{
  width: 100% ;
  height: 400rpx;
  padding: 80rpx 30rpx 50rpx 100rpx;
}
.word-name{
  font-family: Arial, Helvetica, sans-serif;
  font-size: 60rpx;
  margin-bottom: 26rpx;
}
.item{
  display: flex;
  font-family: cursive;
  font-size: 38rpx;
  margin-bottom: 10rpx;
}
.record-container{
  width: 100%;
  border-top: 2rpx solid rgb(112, 112, 112);
}
.pronunciation-list{
  padding: 20rpx 0 0 50rpx;
  height: 356rpx;
  display: flex;
  flex-wrap: wrap;
}
.pronunciation-item{
  width: 220rpx;
  height: 70rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}
.pronunciation-item .user-avatar{
  width: 60rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  margin-right: 6rpx;
}
.play-img{
  width: 50rpx;
  height: 50rpx;
}
.show-delete{
  width: 40rpx;
  height: 40rpx;
  margin-left: 6rpx;
}
.record-icon{
  display: flex;
  justify-content: center;
  padding-bottom: 100rpx;
}
.record-img{
  width: 145rpx;
  height: 145rpx;
}