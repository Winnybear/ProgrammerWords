.word-info{
  width: 100%;
  height: 500rpx;
  padding: 60rpx 0 30rpx 80rpx;
}
.word-name-container{
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}
.word-name{
  font-family: PingFangSC-Semibold;
  font-size: 30px;
  color: #333333;
  margin-right: 40rpx;
  letter-spacing: 0;
}
.item{
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: rgb(130, 130, 130);
  letter-spacing: 0;
}
.horn{
  width: 48rpx;
  height: 43rpx;
}
.word-pronunciation{
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  letter-spacing: 0;
  margin-bottom: 27rpx;
}
.description-container{
  align-items: flex-start;
  margin-bottom: 0;
  padding-bottom: 20rpx;
}
.word-description{
  width: 480rpx;
  height: 200rpx;
  overflow: scroll;
}
.record-container{
  width: 100%;
  border-top: 10rpx solid rgba(211, 210, 210, 0.301);
}
.pronunciation-list{
  padding: 20rpx 80rpx 0 80rpx;
  height: 450rpx;
  overflow: scroll;
}
.pronunciation-item{
  height: 70rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.pronunciation-item-container{
  height: 70rpx;
  display: flex;
  align-items: center;
}
.pronunciation-item .user-avatar{
  width: 60rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  margin-right: 45rpx;
}
.user-pronunciation{
  width: 140rpx;
  height: 48rpx;
  background-color: #8DD468;
  position: relative;
  border-radius: 12rpx;
}
.show-play{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 35rpx;
  top: -1%;
}
.box {
  width: 40rpx;
  height: 40rpx;
  box-sizing: border-box;
}
.play-symbol {
  width: 50rpx;
  height: 50rpx;
  box-sizing: border-box;
  overflow: hidden;
  transform: rotate(135deg);
}
.play-circle {
  border: 5rpx solid #fff ;
  border-radius: 50%;
  position: absolute;
}
.first {
  width: 5rpx;
  height: 5rpx;
  background: #fff ;
  top: 45rpx;
  left: 45rpx;
}
.second {
  width: 25rpx;
  height: 25rpx;
  top: 35rpx;
  left: 35rpx;
}
.third {
  width: 40rpx;
  height: 40rpx;
  top: 25rpx;
  left: 25rpx;
}
.second-move{
  animation: fadeInOut 1s infinite 0.2s;
}
.third-move{
  animation: fadeInOut 1s infinite 0.4s;
}
@keyframes fadeInOut {
  0% {
      opacity: 0; 
  }
  100% {
      opacity: 1; 
  }
}
.delta{
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  left: -18rpx;
  top: 13rpx;
}
.show-delete{
  width: 40rpx;
  height: 40rpx;
  margin-left: 40rpx;
}
.record-icon .login-btn{
  height: 85rpx;
  color: #fff;
  background-color: rgb(109, 151, 241);
  line-height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0;
  margin: 0;
  justify-content: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.record-img{
  width: 120rpx;
  height: 120rpx;
}
.record-text{
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #848484;
}
.record-icon{
  position: absolute;
  bottom: 10%;
  left: 50%;
  transform: translateX(-50%);
  box-sizing: border-box;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 60rpx;
}
.record{
  width:120rpx;
  height:120rpx;
  background: rgb(188, 217, 232);
  border-radius: 50%;
  color:#fff;
  position: relative;
}
.ripple{
  position: absolute;
  top:2rpx;
  left:3rpx;
  right:4rpx;
  bottom:0;
  border-radius: 50%;
  border:4px solid rgba(206, 227, 238, 0.801);
}
.rippleAnimation1{
  animation: ripple 1s infinite ease-in;
} 
.rippleAnimation2{
  animation: ripple 1s infinite ease-in;
  animation-delay:0.3s;
} 
@keyframes ripple{
  from{
    opacity: 1;
    transform: scale(1,1)
  }
  to{
    opacity: 0;
    transform: scale(2,2)
  }
}