.word-info{
  width: 100%;
  height: 500rpx;
  padding: 60rpx 0 30rpx 80rpx;
}
.word-name{
  font-family: Arial, Helvetica, sans-serif;
  font-size: 60rpx;
  margin-bottom: 4rpx;
}
.item{
  display: flex;
  font-family: cursive;
  font-size: 34rpx;
  margin-bottom: 8rpx;
}
.word-pronunciation{
  margin-bottom: 36rpx;
  display: flex;
  align-items: center;
}
.horn{
  width: 44rpx;
  height: 47rpx;
  margin-left: 20rpx;
}
.word-translation,.word-description{
  font-size: 32rpx;
}
.word-description{
  width: 480rpx;
  height: 200rpx;
  overflow: scroll;
}
.record-container{
  width: 100%;
  border-top: 10rpx solid rgba(211, 210, 210, 0.301);
  position: relative;
}
.pronunciation-list{
  padding: 20rpx 0 0 80rpx;
  height: 450rpx;
  overflow: scroll;
}
.pronunciation-item{
  height: 70rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}
.pronunciation-item .user-avatar{
  width: 60rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  margin-right: 45rpx;
}
.user-pronunciation{
  width: 115rpx;
  height: 48rpx;
  background-color: rgb(146, 230, 73);
  position: relative;
  border-radius: 7rpx;
}
.show-play{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 35rpx;
  top: -1%;
}
.box {
  width: 40rpx;
  height: 40rpx;
  box-sizing: border-box;
}
.play-symbol {
  width: 50rpx;
  height: 50rpx;
  box-sizing: border-box;
  overflow: hidden;
  transform: rotate(135deg);
}
.play-circle {
  border: 5rpx solid #fff;
  border-radius: 50%;
  position: absolute;
}
.first {
  width: 5rpx;
  height: 5rpx;
  background: #fff;
  top: 45rpx;
  left: 45rpx;
}
.second {
  width: 25rpx;
  height: 25rpx;
  top: 35rpx;
  left: 35rpx;
}
.third {
  width: 40rpx;
  height: 40rpx;
  top: 25rpx;
  left: 25rpx;
}
.second-move{
  animation: fadeInOut 1s infinite 0.2s;
}
.third-move{
  animation: fadeInOut 1s infinite 0.4s;
}
@keyframes fadeInOut {
  0% {
      opacity: 0; 
  }
  100% {
      opacity: 1; 
  }
}
.delta{
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  left: -18rpx;
  top: 13rpx;
}
.show-delete{
  width: 40rpx;
  height: 40rpx;
  margin-left: 40rpx;
}
.record-icon{
  position: absolute;
  bottom: -214rpx;
  left: 50%;
  transform: translateX(-50%);
}
.record-icon .record{
  background-color: #fff;
  padding: 0;
  margin: 0;
}
.record-icon .login-btn{
  height: 85rpx;
  color: #fff;
  background-color: rgb(109, 151, 241);
  line-height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0;
  margin: 0;
  justify-content: center;
}
.record-img{
  width: 145rpx;
  height: 145rpx;
}
.record-text{
  text-align: center;
}
.img-container{
  width: 70rpx;
  overflow: hidden;
}