.word-info{
  width: 100% ;
  height: 400rpx;
  padding: 60rpx 0 30rpx 100rpx;
}
.word-name{
  font-family: Arial, Helvetica, sans-serif;
  font-size: 60rpx;
  margin-bottom: 26rpx;
}
.item{
  display: flex;
  font-family: cursive;
  font-size: 34rpx;
  margin-bottom: 10rpx;
}
.word-description{
  width: 550rpx;
  height: 200rpx;
  overflow: scroll;
}
.record-container{
  width: 100%;
  border-top: 2rpx solid rgb(112, 112, 112);
}
.pronunciation-list{
  padding: 20rpx 0 0 30rpx;
  height: 420rpx;
  display: flex;
  flex-wrap: wrap;
  overflow: scroll;
}
.pronunciation-item{
  width: 220rpx;
  height: 70rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  margin-right: 15rpx;
}
.pronunciation-item .user-avatar{
  width: 60rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  margin-right: 15rpx;
}
.user-pronunciation{
  width: 80rpx;
  height: 48rpx;
  background-color: rgb(146, 230, 73);
  position: relative;
  border-radius: 7rpx;
}
.play-img{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 10rpx;
  top: 12%;
}
.delta{
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  left: -18rpx;
  top: 13rpx;
}
.show-delete{
  width: 40rpx;
  height: 40rpx;
  margin-left: 6rpx;
}
.record-icon{
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}
.record-icon .record{
  background-color: #fff;
  padding: 0;
  margin: 0;
}
.record-icon .login-btn{
  color: #fff;
  background-color: rgb(109, 151, 241);
}
.record-img{
  width: 145rpx;
  height: 145rpx;
}
.record-text{
  text-align: center;
}