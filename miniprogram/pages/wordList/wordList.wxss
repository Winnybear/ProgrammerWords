.container{
  box-sizing: border-box;
}
.word-number{
  width: 100%;
  border-bottom: 2rpx solid #F6F6F6;
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx;
}
.word-list{
  width: 100%;
}
.word-item{
  font-family: Arial, Helvetica, sans-serif;
  font-size: 30rpx;
  border-bottom: 2rpx solid #F6F6F6;
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  margin-bottom: 2rpx;
  letter-spacing: 3rpx;
}
.word-info{
  width: 100%;
  padding: c;
  position: relative;
  padding: 15rpx 20rpx 15rpx 30rpx;
}
.bg-color{
  height: 120rpx;
  color: #fff;
  background-color: rgb(95, 141, 240);
  animation: trunBack 2s ease;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
@keyframes trunBack{
  from {background-color: #fff;}
  to {background-color: rgb(95, 141, 240);}
}
.bg-color .item-back{
  width: 540rpx;
  height: 35rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.word-detail{
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  right: 50rpx;
  top: 50%;
  transform: translateY(-50%);  
  width: 115rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.arrow{
  width: 60rpx;
  height: 60rpx;
}
.add-btn{
  margin-top: 20rpx;
}