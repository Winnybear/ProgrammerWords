.container{
  box-sizing: border-box;
}
.word-list{
  width: 100%;
}
.word-item{
  font-family: Arial, Helvetica, sans-serif;
  font-size: 30rpx;
  border-bottom: 2rpx solid #F6F6F6;
  width: 100%;
  height: 102rpx;
}
.word-info{
  width: 100%;
  padding: 15rpx 20rpx 15rpx 20rpx;
  position: relative;
}
.bg-color{
  color: #fff;
  background-color: rgb(95, 141, 240);
  font-size: 26rpx;
}
.bg-color .item-back{
  width: 540rpx;
  height: 35rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.word-detail{
  font-size: 22rpx;
  color: #fff;
  position: absolute;
  right: 76rpx;
  bottom: 8rpx;
}
.add-btn{
  margin-top: 20rpx;
}